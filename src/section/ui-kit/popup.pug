mixin popup()
    //- +b('dialog').popup //пока не поддерживается
    +b.popup&attributes( attributes )
        +e.content
            //- ПопАпчики
            block

//- для использования дат
mixin popup--data(data)
    +b.popup&attributes( data.attributes )
        +e.content( class=data.contentClass )
            //- ПопАпчики
            block

//- Пустая заглушка попоапа
mixin popup--empty()
    +b.popup&attributes( attributes )
        block

//- Пустая заглушка попоапа
mixin popup--slide-up()
    +b.slide-up&attributes( attributes )
        block

//- Крестик
mixin popup_close()
    +b('a').popup__close( href='javasript:void(0);', class!=attributes.class, title="close" ).js-close-popup ✖